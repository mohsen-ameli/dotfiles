#!/bin/bash
##########################
## Get the battery capacity and its icon
##########################

print_usage() {
	echo -e """Usage: $0 [arguments]
	
arguments:
    --live: \t print live battery info
    --text: \t print battery percentage text only
    --icon: \t print battery icon only
    --text-icon: \t print both icon and percentage"""
}

UPDATE_TIME=5

get_icon() {
    capacity=$(cat /sys/class/power_supply/BAT0/capacity)
    status=$(cat /sys/class/power_supply/BAT0/status)
    
    if [[ $status == "Charging" ]]; then
        icon=""
    elif [[ $capacity -lt 10 ]]; then
        icon=""
    elif [[ $capacity -lt 35 ]]; then
        icon=""
    elif [[ $capacity -lt 50 ]]; then
        icon=""
    elif [[ $capacity -lt 75 ]]; then
        icon=""
    else
        icon=""
    fi
    echo "$icon"
}

live() {
    while true; do
        capacity=$(cat /sys/class/power_supply/BAT0/capacity)
        s=$(cat /sys/class/power_supply/BAT0/status)

        if [[ $s == "Discharging" ]]; then
            if [[ $capacity -le 5 ]]; then
                status="critical"
            elif [[ $capacity -le 15 ]]; then
                status="low"
            elif [[ $capacity -le 25 ]]; then
                status="warning"
            else
                status="discharging"
            fi
        else
            status="charging"
        fi

        echo '{ "capacity": '$capacity', "status": "'$status'", "icon": "'$capacity% $(get_icon)'"}'

        sleep $UPDATE_TIME
    done
}

info() {
    upower=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0)
    capacity=$(echo "$upower" | awk '/percentage/ {printf $2}')
    status=$(echo "$upower" | awk '/state/ {printf $2}')
    time_to_empty=$(echo "$upower" | awk '/time to/ {printf $4; printf " "; print $5}')
    health=$(echo "$upower" | awk '/capacity/ {printf $2}' | cut -d. -f1)

    echo -e "<tt>Capacity: \t$capacity\nStatus: \t$status\nHealth: \t$health%\nTime To Empty: \t$time_to_empty</tt>"
}

if [[ $1 == "--text" ]]; then
    echo "$capacity"
elif [[ $1 == "--icon" ]]; then
    get_icon
elif [[ $1 == "--text-icon" ]]; then
    echo "$capacity% $(get_icon)"
elif [[ $1 == "--live" ]]; then
    live
elif [[ $1 == "--info" ]]; then
    info
else
    print_usage
fi
