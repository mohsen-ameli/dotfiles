#!/bin/sh
##########################
## Switches between integrated and hybrid graphics on laptops with two GPUs.
##########################

# gum spin -s dot -- "$ping_hi"

integrated() {
  # echo 1 | sudo tee /sys/devices/platform/asus-nb-wmi/dgpu_disable
  # echo 0 | sudo tee /sys/bus/pci/rescan
  # echo 1 | sudo tee /sys/devices/platform/asus-nb-wmi/dgpu_disable
  sudo supergfxctl -m Integrated
  # sudo envycontrol -s integrated
}

hybrid() {
  # sudo envycontrol -s hybrid # --force-comp
  sudo supergfxctl -m Hybrid
  # success=$(printf $?)
  # echo 0 | sudo tee /sys/devices/platform/asus-nb-wmi/dgpu_disable
  # echo 0 | sudo tee /sys/bus/pci/rescan
  # echo 1 | sudo tee /sys/bus/pci/rescan
  # echo 0 | sudo tee /sys/devices/platform/asus-nb-wmi/dgpu_disable
  #
  # if [ $success -ne 0 ]; then
  #   sudo envycontrol -s hybrid
  # fi
}

log_out() {
  if gum confirm "Do you want to log out? (recommended)" ;then
    [ $($HOME/.local/bin/is-wayland) -eq 1 ] && hyprctl dispatch exit || killall Xorg
  fi
  exit
}

reboot() {
  if gum confirm "Do you want to restart now? (recommended)" ;then
    sudo reboot now
  fi
  exit
}

interactive() {
  if [ "$(gum choose "Integrated" "Hybrid")" = "Integrated" ]; then
    if gum confirm "(WARNING: this might log you out) Do you want to switch to integrated graphics?" ;then
      echo -e "\n:: Switching to integrated graphics.\n"
      integrated
      if [ $? -eq 0 ]; then
        echo -e "\n:: Success!\n"
        log_out
      fi
    fi
  else
    if gum confirm "(WARNING: this might log you out) Do you want to switch to hybrid graphics?" ;then
      echo -e "\n:: Switching to hybrid graphics.\n"
      hybrid
      if [ $? -eq 0 ]; then
        echo -e "\n:: Success!\n"
        reboot
      fi
    fi
  fi
  exit
}

get() {
  mode=$(lspci -k | grep -A3 VGA | grep -A3 NVIDIA > /dev/null)
  if [ $? -eq 0 ]; then
    [ "$mode" = "nouveau" ] && echo "Nouveau 󰔑" || echo "Hybrid "
  else
    echo "Integrated "
  fi
}

if [ "$1" = "--get" ]; then
  get
elif [ "$1" = "--pci" ]; then
  lspci -k | grep -A 3 -i vga
elif [ "$1" = "--integrated" ]; then
  integrated
elif [ "$1" = "--hybrid" ]; then
  hybrid
elif [ "$1" = "--interactive" ]; then
  interactive
else
  echo "Usage: switch-graphics [--get] [--pci] [--integrated] [--hybrid]"
fi

