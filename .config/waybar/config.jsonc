{
    // "height": 20,
    "margin": "6 0 0 6", // top right bot left
    "layer": "top",
    "modules-left": [
        "custom/pacman",
        "custom/temp",
        "custom/mem",
        "cpu",
        "custom/rog",
        "tray",
        "gamemode",
        "hyprland/window",
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "custom/weather",
        "custom/swaync",
        // "bluetooth",
        // "custom/network",
        "pulseaudio",
        "custom/mic",
        "battery",
        "clock",
        "custom/power"
    ],
    //***************************
    //*  Modules configuration  *
    //***************************
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}"
        // "format-icons": {
        //     "1": "Ôâ®",
        //     "2": "Û∞®û",
        //     "3": "ÔÄÅ",
        //     "4": "Ôáø",
        //     "5": "Ôíâ",
        //     "6": "Û∞≤™",
        //     "7": "Û∞≤¨",
        //     "8": "Û∞≤Æ",
        //     "9": "Û∞≤∞",
        //     "10": "Û∞ø¨"
        // }
        // "persistent-workspaces": {
        //     "*": 5
        // }
    },
    "hyprland/window": {
        "format": "üëâ {}",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "üåé $1",
            "(.*) - fish": "> [$1]"
        },
        "separate-outputs": true
    },
    "custom/pacman": {
        "format": "{} ÔåÉ",
        "interval": 3600,
        "tooltip": true,
        "exec": "$HOME/.local/bin/updates --count", // # of updates
        "on-click": "alacritty --class floating -e $HOME/.local/bin/install-updates" // update system
    },
    "gamemode": {
        "format": "{glyph}",
        "format-alt": "{glyph} {count}",
        "glyph": "Ôû≥",
        "hide-not-running": true,
        "use-icon": true,
        "icon-name": "input-gaming-symbolic",
        "icon-spacing": 4,
        "icon-size": 20,
        "tooltip": true,
        "tooltip-format": "Games running: {count}"
    },
    "custom/swaync": {
        "format":"{icon}",
        "format-icons": {
            "notification": "Û∞Çö",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÉ≥",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "clock": {
        "format": "{:%I:%M %p}",
        "format-alt": "{:%A, %B %d, %Y}",
        "tooltip-format": "<tt><span size='large'>{calendar}</span></tt>",
        "calendar": {
            "mode"          : "month",
            "mode-mon-col"  : 2,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "on-click-right": "mode",
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b></b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        },
        "interval": 60
    },
    "custom/weather": {
        "format": "{}",
        "tooltip": true,
        "interval": 1800,
        "exec": "$HOME/.local/bin/weather",
        "return-type": "json"
    },
    "bluetooth": {
        "format": "Ôäî",
        "format-connected": "Û∞Ç±",
        "format-off": "Û∞Ç≤",
        "format-connected-battery": "Û∞ÅπÛ∞Ç±",
        // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        "tooltip-format": "Bluetooth is {status}\n\n{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
        "on-click": "alacritty --class floating -e bluetuith"
    },
    "custom/network": {
        "format": "{}",
        "return-type": "json",
        "interval": 5,
        "tooltip": true,
        "exec": "$HOME/.local/bin/network",
        "on-click": "$HOME/.local/bin/dmenu-wifi"
    },
    "pulseaudio": {
        "scroll-step": 2,
        "reverse-scrolling": 1,
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "0% {icon}Ôäî",
        "format-muted": "0% Û∞ñÅ",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñè",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ", "ÔÄ®"]
        },
        "on-click": "$HOME/.local/bin/volume --toggle",
        "on-click-right": "pavucontrol"
    },
    "custom/mic": {
        "format": "{}",
        "return-type": "json",
        "exec-on-event": true,
        "exec": "$HOME/.local/bin/volume --get-mic",
        "on-click": "$HOME/.local/bin/volume --toggle-mic",
        "on-click-right": "pavucontrol",
        "tooltip": true,
        "tooltip-format": "Toggle Mic",
        "signal": 10 // using the following, we can update the text: pkill -SIGRTMIN+10 waybar
    },
    "custom/temp": {
        "format": "{}",
        "on-click":"alacritty --class floating -e btop",
        "exec": "$HOME/.local/bin/temperature --full",
        "interval": 2,
        "return-type": "json",
        "tooltip": true
    },
    "custom/mem": {
        "format": "{}",
        "interval": 2,
        "exec": "$HOME/.local/bin/memory --full",
        "on-click":"alacritty --class floating -e btop",
        "return-type": "json",
        "tooltip": true
    },
    "cpu": {
        "format": "{usage:2}% Ôãõ",
        "on-click": "alacritty --class floating -e btop",
        "interval": 2,
        "return-type": "json",
        "tooltip": true
    },
    "battery": {
        "states": {
	        "good": 80,
            "warning": 25,
            "low": 15,
            "critical": 5
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% ÔÉß",
        // "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "ÔâÑ ", // 0%
            "ÔâÉ ", // 25%
            "ÔâÇ ", // 50%
            "ÔâÅ ", // 75%
            "ÔâÄ "
        ],
        "interval": 30
    },
    "custom/power": {
        "format": "ÔÄë",
        "on-click": "$HOME/.local/bin/dmenu-power",
        "tooltip": true,
        "tooltip-format": "Power Menu"
    },
    "custom/rog": {
        "format": "{}",
        "return-type": "json",
        "exec": "$HOME/.local/bin/rog --get",
        "on-click": "$HOME/.local/bin/rog --profile-toggle",
        "on-click-right": "rog-control-center",
        // "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "signal": 8
    }
}
