(defwidget updates []
    (revealer :reveal {open_updates}
        (box :class "time-reveal" :orientation "v" :space-evenly false :spacing 8
            (button :timeout "24h" :onclick "$HOME/.config/eww/scripts/toggle_control.sh; alacritty --class floating -e $HOME/.local/bin/install-updates" :class "control-box" "Update All")
            (scroll :height 500
                (label :markup {updates.tooltip} :class "control-box")
            )
        )
    )
)