        (label :tooltip "CPU Temperature" :text temperature :class "widget first")
        (button :tooltip "Memory" :timeout "24h" :onclick `$HOME/.local/bin/open-window "$HOME/.local/bin/launch-in-terminal btop"` :class "widget" memory)
        (label :tooltip "CPU Usage" :text {round(EWW_CPU.avg, 0) + "% ï‹›"} :class "widget")
        (button :tooltip "Weather" :timeout "24h" :onclick "scripts/toggle.sh weather" :class "widget" {weather.text})
